{
  "buildCommand": "npm run build:client",
  "installCommand": "pnpm install --frozen-lockfile",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/.*",
      "dest": "/api"
    },
    {
      "src": "/.*",
      "dest": "/dist/spa/index.html"
    }
  ]
}
